{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2015"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "outDir": "./dist",
    "alwaysStrict": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "deno_ls_plugin"
      }
    ],
    "paths": {
      "http://*": ["../../../../.deno/deps/http/*"],
      "https://*": ["../../../../.deno/deps/https/*"]
    }
  },
  "include": ["lib/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
