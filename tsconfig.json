{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2018"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "rootDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "outDir": "./dist",
    "alwaysStrict": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "deno_ls_plugin"
      },
    ],
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
